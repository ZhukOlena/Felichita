{% extends 'html-layout.html.twig' %}

{% block body %}
    <div class="container-fluid pt-5">
        <div class="row">
            <div class="col-2">
                <ul class="menu-categories">
                    {% for category in categories %}
                    <li>{{ category.title }}</li>
                    {% endfor %}
                </ul>
             </div>
            <div class="col-10">
                {% for group in grouped_products %}
                    <div class="pt-3 bt-3 border-bottom product-category">
                        <div class="row">
                            {% for product in group.products %}
                                <div class="col-4">
                                    <div class="row align-item-center">
                                        <div class="col-3 text-center">
                                            <img width="64" src="{{ product.webImagePath }}"/>
                                        </div>

                                        <div class="col-6">
                                            <h5>{{ product.title }}</h5>

                                            <div class="fw-bolder">{{ product.subTitle }}</div>

                                            <div class="text-muted small-text-center">{{ product.ingredients }}</div>
                                        </div>

                                        <div class="col-3 text-end">
                                            <div class="fb-bolder">{{ product.price }} UAH</div>
                                            <div class="text-muted">{{ product.weight }} g</div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}